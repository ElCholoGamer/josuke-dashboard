{
	"compilerOptions": {
		"target": "ES5",
		"module": "ESNext",
		"removeComments": true,
		"jsx": "react",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"noImplicitAny": true,
		"strict": true,
		"resolveJsonModule": true,
		"strictNullChecks": true,
		"moduleResolution": "node"
	},
	"ts-node": {
		"transpileOnly": true,
		"compilerOptions": {
			"module": "CommonJS"
		}
	},
	"include": ["src/app/**/*"]
}
